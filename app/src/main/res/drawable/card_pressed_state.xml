<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Enhanced shadow when pressed -->
            <item android:top="8dp" android:left="8dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#60000000" />
                </shape>
            </item>
            
            <!-- Tilted card effect -->
            <item android:bottom="8dp" android:right="8dp">
                <rotate android:fromDegrees="2">
                    <shape android:shape="rectangle">
                        <corners android:radius="20dp" />
                        <gradient
                            android:startColor="#50FFFFFF"
                            android:endColor="#20FFFFFF"
                            android:angle="135" />
                        <stroke
                            android:width="1dp"
                            android:color="#60FFFFFF" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <item android:top="4dp" android:left="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="#40000000" />
                </shape>
            </item>
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <gradient
                        android:startColor="#30FFFFFF"
                        android:endColor="#10FFFFFF"
                        android:angle="135" />
                    <stroke
                        android:width="1dp"
                        android:color="#40FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>